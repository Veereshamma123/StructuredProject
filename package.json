{
  "name": "Sapphire",
  "dependencies": {
    "jasmine-allure-reporter": "^1.0.2",
    "jasmine-data-provider": "^2.2.0",
    "protractor": "^5.4.3",
    "protractor-jasmine2-html-reporter": "0.0.7",
    "setupFilesAfterEnv": [
      "jest-allure/dist/setup"
    ]
  },
  "scripts": {
    "webdriver-update": "./node_modules/.bin/webdriver-manager update",
    "webdriver-start": "./node_modules/.bin/webdriver-manager start",
    "protractor": "./node_modules/.bin/protractor config.js",
    "SmokeSuite": "./node_modules/.bin/protractor config.js --suite Smoke",
    "RegressionSuite": "./node_modules/.bin/protractor config.js --suite Regression",
    "start": "npm run webdriver-update &&npm run webdriver-start",
    "pretest": "rm -rf allure-report",
    "test": "protractor conf.js",
    "posttest": "allure generate allure-results --clean -o allure-report || true"
  }
}
